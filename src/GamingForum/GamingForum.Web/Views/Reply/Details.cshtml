@model ReplyDetailsViewModel

@{
    ViewData["Title"] = "Reply";
}

<div class="row">
    <div class="col-md-6">
        <h4>Posted on @Model.RepliedOn</h4>
        <div class="form-group">
            <div class="col-xs-6">
                <a class="nav-link btn btn-primary" asp-controller="Account" asp-action="Profile" asp-route-id="@Model.ReplierId">Replier - @Model.Replier</a>
            </div>
            <div class="col-xs-6">
                <a class="nav-link btn btn-secondary" asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Back to post</a>
            </div>
        </div>
        <div class="form-text">
            <h6>@Model.Description</h6>
        </div>
    </div>
</div>